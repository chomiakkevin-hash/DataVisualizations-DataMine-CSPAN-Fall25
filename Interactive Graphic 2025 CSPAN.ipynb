    "}\n",
    "\n",
    "# ---- Keep original ----\n",
    "df_original <- df\n",
    "\n",
    "# ---- Normalize column  ----\n",
    "norm_names <- function(x) {\n",
    "  x |>\n",
    "    tolower() |>\n",
    "    stringr::str_trim() |>\n",
    "    (\\(s) gsub(\"[\\\\s\\\\-]+\", \"_\", s))() |>\n",
    "    (\\(s) gsub(\"[^a-z0-9_]\", \"\", s))()\n",
    "}\n",
    "cn <- norm_names(colnames(df))\n",
    "\n",
