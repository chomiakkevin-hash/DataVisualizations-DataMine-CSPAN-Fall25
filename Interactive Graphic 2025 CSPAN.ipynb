file_path <- "/anvil/projects/x-cis220051/corporate/ccspan-congressional/Vizualization/Video data/video_training_log.csv" 
sheet_name <- "Sheet1"                 

# ---- Packages ----
req <- c("readxl", "dplyr", "tidyr", "plotly", "htmlwidgets", "tools", "stringr")
new <- setdiff(req, rownames(installed.packages()))
if (length(new)) install.packages(new, dependencies = TRUE)
lapply(req, library, character.only = TRUE) |> invisible()

# ---- Read data ----
ext <- tolower(tools::file_ext(file_path))
if (ext %in% c("xlsx","xls")) {
  df <- readxl::read_excel(file_path, sheet = sheet_name)
} else if (ext %in% c("csv","txt")) {
  df <- read.csv(file_path, header = TRUE, check.names = FALSE)
} else {
  stop("Unsupported file type. Please use .xlsx/.xls or .csv")
}

# ---- Keep original ----
df_original <- df

# ---- Normalize column  ----
norm_names <- function(x) {
  x |>
    tolower() |>
    stringr::str_trim() |>
    (\(s) gsub("[\\s\\-]+", "_", s))() |>
    (\(s) gsub("[^a-z0-9_]", "", s))()
}
cn <- norm_names(colnames(df))

# ---- Locate epoch ----
epoch_candidates <- c("epoch","step","iteration","iter","batch","round")
epoch_idx <- match(epoch_candidates, cn)
epoch_idx <- epoch_idx[!is.na(epoch_idx)]
if (length(epoch_idx) >= 1) {
  epoch_col <- colnames(df)[epoch_idx[1]]
} else {
  # ---- Create an epoch column at the front ----
  df$epoch <- seq_len(nrow(df))
  epoch_col <- "epoch"
  cn <- c("epoch", cn)  
}

# ---- Detect dataset and metric ----
detect_parts <- function(name_norm) {
  # ---- Dataset ----
  if (grepl("\\b(val|valid|validation)\\b", name_norm)) ds <- "validation"
  else if (startsWith(name_norm, "val"))                ds <- "validation"
  else ds <- NA_character_
  # ---- Metric ----
  if (grepl("\\bloss\\b", name_norm))                     mt <- "loss"
  else if (grepl("\\bacc\\b|\\baccuracy\\b", name_norm))  mt <- "accuracy"
  else mt <- NA_character_
  list(dataset = ds, metric = mt)
}

# ---- Build long frame ----
epoch_idx_actual <- which(colnames(df) == epoch_col)
other_idx <- setdiff(seq_along(df), epoch_idx_actual)
long_list <- list()

for (i in other_idx) {
  nm_raw <- colnames(df)[i]
  nm_norm <- norm_names(nm_raw)
  parts <- detect_parts(nm_norm)
  ds <- parts$dataset
  mt <- parts$metric
  if (!is.na(ds) && !is.na(mt) && is.numeric(df[[i]])) {
    long_list[[length(long_list)+1]] <- data.frame(
      epoch   = df[[epoch_col]],
      dataset = ds,
      metric  = mt,
      value   = as.numeric(df[[i]]),
      stringsAsFactors = FALSE
    )
  }
}

# ---- If nothing matches, plot all numeric columns as a separate metric ----
if (length(long_list) == 0) {
  numeric_cols <- which(sapply(df[other_idx], is.numeric))
  if (length(numeric_cols) == 0) stop("No numeric columns found to plot.")
  for (j in other_idx[numeric_cols]) {
    nm <- colnames(df)[j]
    long_list[[length(long_list)+1]] <- data.frame(
      epoch   = df[[epoch_col]],
      dataset = "series",
      metric  = nm,
      value   = as.numeric(df[[j]]),
      stringsAsFactors = FALSE
    )
  }
}

long <- dplyr::bind_rows(long_list) |>
  dplyr::arrange(metric, dataset, epoch)

# ---- Build figure ----
dash_map <- c(training = "solid", validation = "dash")
metrics  <- unique(long$metric)
datasets <- unique(long$dataset)

p <- plotly::plot_ly()
for (m in metrics) {
  for (d in datasets) {
    sub <- dplyr::filter(long, metric == m, dataset == d)
    if (nrow(sub)) {
      p <- p |>
        plotly::add_trace(
          x = sub$epoch, y = sub$value,
          type = "scatter", mode = "lines+markers",
          name = paste0(m, " (", d, ")"),
          line = list(dash = ifelse(d %in% names(dash_map), dash_map[[d]], "dot")),
          hovertemplate = paste(
            "Epoch: %{x}<br>",
            "Metric: ", m, "<br>",
            "Dataset: ", d, "<br>",
            "Value: %{y:.4f}<extra></extra>"
          )
        )
    }
  }
}

p <- p |>
  plotly::layout(
    title  = list(text = "Video Metrics by Epoch", x = 0),
    xaxis  = list(title = "Epoch"),
    yaxis  = list(title = "Training Loss Value"),
    legend = list(orientation = "h", x = 0, y = -0.2),
    hovermode = "x unified"
  ) |>
  plotly::config(displaylogo = FALSE)  # ---- clean toolbar ----

p

