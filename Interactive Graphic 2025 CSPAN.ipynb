# ---- Packages ----
req <- c("dplyr","tidyr","plotly","stringr","readr","tools")
new <- setdiff(req, rownames(installed.packages()))
if (length(new)) install.packages(new, dependencies = TRUE)
invisible(lapply(req, library, character.only = TRUE))

# ---- Helpers ----
norm_names <- function(x) {
  x |>
    tolower() |>
    stringr::str_trim() |>
    (\(s) gsub("[\\s\\-]+", "_", s))() |>
    (\(s) gsub("[^a-z0-9_]", "", s))()
}
safe_ascii <- function(s) iconv(s, from = "", to = "ASCII//TRANSLIT")

# ---- Locate and load CSV ----
candidate_paths <- c(
  "/anvil/projects/x-cis220051/corporate/ccspan-congressional/Vizualization/Video data/video_predictions.csv",
  "/anvil/projects/x-cis220051/corporate/ccspan-congressional/Vizualization/video_predictions.csv",
  "/home/x-kchomiak/Project 4/cspan/video_predictions.csv",
  "video_predictions.csv",
  "./video_predictions.csv",
  "./data/video_predictions.csv",
  "../video_predictions.csv"
)
file_path <- NA_character_
for (p in candidate_paths) if (file.exists(p)) { file_path <- p; break }
if (is.na(file_path)) {
  message("Could not find the CSV in common locations. Opening a file pickerâ€¦")
  file_path <- tryCatch(file.choose(), error = function(e) NA_character_)
}
stopifnot(!is.na(file_path) && file.exists(file_path))

df <- readr::read_csv(file_path, show_col_types = FALSE, progress = FALSE)

# ---- Normalize names ----
cn_norm <- norm_names(colnames(df))

# ---- Choose x-axis ----
x_candidates <- c("time","timestamp","frame","step","iter","iteration","epoch","index")
pick_idx <- match(x_candidates, cn_norm)
pick_idx <- pick_idx[!is.na(pick_idx)]
if (length(pick_idx)) {
  x_col <- colnames(df)[pick_idx[1]]
} else {
  x_col <- "._row_index"
  df[[x_col]] <- seq_len(nrow(df))
}

# Refresh normalized names 
cn_norm <- norm_names(colnames(df))

# ---- Parse time ----
if (is.character(df[[x_col]])) {
  try({
    parsed <- suppressWarnings(as.POSIXct(df[[x_col]]))
    if (all(!is.na(parsed))) df[[x_col]] <- parsed
  }, silent = TRUE)
}

# ---- Identify video columns and ensure all entries are numeric ----
is_num <- sapply(df, is.numeric)
audio_like <- grepl("audio|sound", cn_norm)
mask <- is_num & audio_like & (colnames(df) != x_col)
audio_cols <- colnames(df)[mask]

if (length(audio_cols) == 0) {
  audio_cols <- setdiff(colnames(df)[is_num], x_col)
}
if (length(audio_cols) == 0) {
  audio_cols <- "._value"
  df[[audio_cols]] <- seq_len(nrow(df))
}

# ---- Reformat data for Plotting ----
long <- df[, c(x_col, audio_cols), drop = FALSE] |>
  tidyr::pivot_longer(cols = -dplyr::all_of(x_col),
                      names_to = "series", values_to = "value")

# ---- Build dropdown ----
buttons <- list()
p <- plotly::plot_ly()
for (i in seq_along(audio_cols)) {
  col_i <- audio_cols[i]
  sub <- dplyr::filter(long, series == col_i)
  p <- p |>
    plotly::add_trace(
      data = sub,
      x = ~ .data[[x_col]],
      y = ~ value,
      type = "scatter",
      mode = "lines",
      name = col_i,
      visible = ifelse(i == 1, TRUE, FALSE),
      line = list(width = 2, shape = "spline")
    )
  vis <- rep(FALSE, length(audio_cols)); vis[i] <- TRUE
    
  # ---- ASCII to prevent U+2013 showing up ----
  ttl <- safe_ascii(paste("Audio Value Over Time -", col_i))
  buttons[[i]] <- list(
    method = "update",
    args = list(list(visible = vis),
                list(title = ttl)),
    label = col_i
  )
}

initial_title <- safe_ascii(paste("Video Value Over Time -", audio_cols[1]))

p <- p |>
  plotly::layout(
    title  = initial_title,
    xaxis  = list(title = "Index Value"),
    yaxis  = list(title = "Video Value"),
    updatemenus = list(list(
      active = 0,
      buttons = buttons,
      x = 1.02, y = 1, xanchor = "left"
    )),
    hovermode = "x unified"
  ) |>
  plotly::config(displaylogo = FALSE)

